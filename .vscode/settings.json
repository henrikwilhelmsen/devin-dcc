{
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        }
    },
    "ruff.enable": true,
    "ruff.fixAll": true,
    "ruff.organizeImports": true,
    "editor.rulers": [
        88,
        120
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.languageServer": "None", // Using basedpyright, enabled in pyproject.toml
    "cSpell.words": [
        "customise",
        "debugpy",
        "idname",
        "mayapy",
        "Mobu",
        "Mobupy",
        "motionbuilder",
        "ngskintools",
        "onefile",
        "pipx",
        "PROGRAMDATA",
        "pydantic",
        "pydocstyle",
        "pyinstaller",
        "pyproject",
        "pytest",
        "PYTHONUNBUFFERED",
        "SCRIPTPLUGINS",
        "sitecustomize",
        "sitepackages",
        "venv",
        "Wilhelmsen"
    ],
}